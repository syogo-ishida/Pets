<div class="container">
  <div id="title" class="center-title">Log in</div>

  <div class="row mt-4">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">

    <p class="error"><%= flash[:error] %></p>
    <%= form_with model: @user, url: user_session_path, local: true do |f| %>
      <table class="info-edit-table">
        <tr>
          <th class="label">Email</th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@gmail.com", class: 'form-control form-font' %></td>
        </tr>
        <tr>
          <th class="label">Passward</th>
          <td><%= f.password_field :password, placeholder: "******", class: 'form-control' %></td>
        </tr>
      </table>
      <% if devise_mapping.rememberable? %>
        <div class="field" style="text-align: center;">
          <%= f.check_box :remember_me, class: "remember-me" %>
          <%= f.label :remember_me, class: "remember-me" %>
        </div>
      <% end %>

      <div class="mt-5 text-center">
        <%= f.submit "LOG IN", class: "login-btn button" %>
      </div>
      <div class="action-signup mt-5 pt-3">
        <p class="text">登録がまだの方はこちら</p>
        <%= render "users/shared/links" %>
      </div>



    <% end %>
  </div>
</div>

