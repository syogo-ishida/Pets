<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-4">
      <div id="title">Chat room</span></div>
    </div>
    <div class="col-lg-6"></div>
  </div>

  <div class="row mt-1">
    <div class="col-lg-12">
      <div id="chat_index" class="chat_box">
        <%= render "chat", chats: @chats %>
      </div>
      <div class="form-inline mt-3">
        <%= form_with model: @chat do |f| %>
          <%= f.text_area :message, rows:'1',id: 'chat-text', class: 'form-control' %>
          <%= f.hidden_field :room_id, :value => @room.id %>
          <%= f.hidden_field :user_id, :value => @user.id %>
          <%= button_tag :type => "submit", :class =>"chat-btn" do %>
            <i class="fas fa-paper-plane fa-2x" style="color: #2a4073;"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
