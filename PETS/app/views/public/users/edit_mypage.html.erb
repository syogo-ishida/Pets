<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-4">
      <div id="title">My page edit</span></div>
    </div>
    <div class="col-lg-6"></div>
  </div>

  <div class="row mt-5">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">


      <%= form_with model: @user, url: update_mypage_path(current_user.id), local: true do |f| %>
        <div class="row">
          <div class="col-lg-4">
            <h4 class="label">User name</h4>
          </div>
          <div class="col-lg-5 mt-3">
          <%= f.text_field :user_name, autofocus: true, class: 'form-control user-name' %>
          <% if @user.errors.include?(:user_name) %>
            <p class="user-attention"><%= @user.errors.full_messages_for(:user_name).first %>
          <% end %>
          </div>
        </div>
        <h4 class="label">User image</h4>
        <%= f.attachment_field :image %>
        <h4 class="label">Self introduction</h4>
        <%= f.text_area :self_introduction, rows:'3', class: 'form-control captions' %>
      <% if @user.errors.include?(:self_introduction) %>
        <p class="attention"><%= @user.errors.full_messages_for(:self_introduction).first %>
      <% end %>
        <div class="text-center mt-5">
          <%= f.submit 'UPDATE', class: "edit-btn button" %>
        </div>

      <% end %>

    </div>
    <div class="col-lg-3"></div>
  </div>
</div>



