<div class="container admin-new-container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-4">
      <div id="title">Log in</span></div>
    </div>
    <div class="col-lg-6"></div>
  </div>

  <div class="row mt-4">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">

    <%= flash[:error] %>
    <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
      <table class="info-edit-table">
        <tr>
          <th class="label">Email</th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@gmail.com", class: 'form-control' %></td>
        </tr>
        <tr>
          <th class="label">Passward</th>
          <td><%= f.password_field :password, placeholder: "******", class: 'form-control' %></td>
        </tr>
      </table>
      <% if devise_mapping.rememberable? %>
        <div class="field" style="text-align: center;">
          <%= f.check_box :remember_me, class: "remember-me" %>
          <%= f.label :remember_me, class: "remember-me" %>
        </div>
      <% end %>

      <div class="actions mt-5" style="text-align: center;">
        <%= f.submit "LOG IN", class: "log-in-btn button" %>
        <%= render "users/shared/links" %>
      </div>
    <% end %>
  </div>
</div>

